@using System.Web.Optimization;
@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/components/accordion.min.js")

<div class="uk-grid " data-uk-grid-margin>
    <div class="uk-width-medium-1-5 ">
        <div class="uk-sticky-placeholder uk-margin">
            <div class="uk-panel uk-panel-box uk-sticky-init uk-active" data-uk-sticky="{top:15, media: 780}">
                <form class="uk-search" data-uk-search>
                    <input class="uk-search-field" type="search" placeholder="search..." />
                </form>
                <div class="uk-nav-divider"></div>
                <ul class="uk-nav uk-nav-side">
                    <li>
                        <a href="#">History</a>
                    </li>
                    <li>
                        <a href="#">Fiction</a>
                    </li>
                    <li>
                        <a href="#">Art</a>
                    </li>
                    <li>
                        <a href="#">Science</a>
                    </li>
                    <li>
                        <a href="#">Reference</a>
                    </li>
                    <li>
                        <a href="#">Sport</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
