@{
    ViewBag.Title = "BookStatus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="uk-width-medium-3-4">
    <div>
        <h2>Book Status</h2>
        <table class="uk-table uk-table-hover uk-table-striped">
            <caption></caption>
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Book</th>
                    <th>Due Date</th>
                    <th>Response</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Rey Tumulak</td>
                    <td>Systems Analysis and Design</td>
                    <td>04.10.2015</td>
                    <td>
                        <div class="uk-grid ">
                            <div class="uk-margin-right">
                                <a class="uk-button uk-button-primary uk-button-success" data-uk-modal="{target:'#my-id'}">Receive</a>
                            </div>
                            <div class="uk-margin-right">
                                <a class="uk-button uk-button-primary uk-button-danger">Report</a>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div id="my-id" class="uk-modal">
    <div class="uk-modal-dialog">
        <a class="uk-modal-close uk-close"></a>
        <form class="uk-form uk-form-horizontal">
            <fieldset data-uk-margin>
                <legend>Receive Form</legend>
                <div class="uk-form-row">
                    <label class="uk-form-label" for="form-h-ipc">Name:</label>
                    Rey Tumulak
                </div>
                <div class="uk-form-row">
                    <label class="uk-form-label" for="form-h-ipc">Book:</label>
                    Systems Analysis and Design
                </div>
                <div class="uk-form-row">
                    <label class="uk-form-label" for="form-h-ipc">Due Date:</label>
                    04.10.2015
                </div>
                <div class="uk-form-row">
                    <label class="uk-form-label" for="form-h-iss">Status:</label>
                    <div class="uk-form-controls">
                        <select id="form-h-iss">
                            <option class="uk-text-success">OK</option>
                            <option class="uk-text-danger">Damage</option>
                        </select>
                    </div>
                </div>
                <div class="uk-form-row">
                    <label class="uk-form-label" for="form-h-ipc">Note:</label>
                    <textarea cols="30" rows="5"> </textarea>
                </div>
            </fieldset>
            <br />
            <div class="uk-form-row">
                <a class="uk-width-1-5 uk-align-right uk-button uk-button-primary" href="#">OK</a>
                <a class="uk-width-1-5 uk-align-right uk-button uk-button-danger" href="#">Cancel</a>
            </div>
        </form>
    </div>
</div>