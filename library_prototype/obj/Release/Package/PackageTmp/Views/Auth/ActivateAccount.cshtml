@using System.Web.Optimization;
@model library_prototype.Models.ActivationModel

@{
    ViewBag.Title = "ActivateAccount";
    Layout = "~/Views/Auth/Login.cshtml";
}
@Scripts.Render("~/Scripts/components/datepicker.min.js")
@Scripts.Render("~/Scripts/components/form-select.min.js")
@Styles.Render("~/Content/components/form-select.almost-flat.min.css")
@Styles.Render("~/Content/components/datepicker.almost-flat.min.css")
<div id="activate" class="uk-offcanvas">
    <div class="uk-offcanvas-bar uk-offcanvas-bar-flip" style="background:none">
        @using (Html.BeginForm("ActivateAccount", "Auth", FormMethod.Post, new { @class = "uk-form uk-form-horizontal" }))
            {
            <div class="uk-form-row">
                @Html.LabelFor(u => u.Email, new { @for = "emailAddress", @class = "uk-form-label" })
                <div class="uk-form-controls">
                    @Html.TextBoxFor(u => u.Email, new { @placeholder = "email address", @id = "emailAddress" })
                    @Html.ValidationMessageFor(u => u.Email, null, new { @class = "uk-form-danger" })
                </div>
            </div>
                <div class="uk-form-row">
                    @Html.LabelFor(u => u.PinCode, new { @for = "pinCode", @class = "uk-form-label" })
                    <div class="uk-form-controls">
                        @Html.PasswordFor(u => u.PinCode, new { @placeholder = "pincode", @id = "pinCode" })
                        @Html.ValidationMessageFor(u => u.PinCode, null, new { @class = "uk-form-danger" })
                    </div>
                </div>
                <div class="uk-form-row">
                    <button type="submit" class="uk-width-1-5 uk-align-right uk-button uk-button-primary">Submit</button>
                </div>
        }
    </div>
</div>

